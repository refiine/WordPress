{
    "name": "refiine/wordpress",
    "description": "Git friendly WordPress install with Lumberjack",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Neil Sweeney",
            "email": "neil@refiine.co.uk",
            "homepage": "https://refiine.co.uk"
        }
    ],
    "support": {
        "issues": "https://github.com/refiine/wordpress/issues"
    },
    "require": {
        "php": ">=7.3",
        "oscarotero/env": "^1.1",
        "vlucas/phpdotenv": "^2.4",
        "rareloop/lumberjack-core": "^5.0",
        "roots/wordpress": "*",
        "roots/wp-config": "1.0.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "wp-premium/advanced-custom-fields-pro": "dev-master",
        "wpackagist-plugin/wp-mail-smtp": "*",
        "wpackagist-plugin/wp-migrate-db": "*",
        "wpackagist-plugin/wordfence": "*",
        "wpackagist-plugin/classic-editor": "*",
        "wpackagist-plugin/wordpress-seo": "*",
        "wpackagist-plugin/acf-content-analysis-for-yoast-seo": "*"
    },
    "require-dev": {
        "wpackagist-plugin/demo-data-creator": "*"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wp-premium/advanced-custom-fields-pro",
                "version": "master",
                "type": "wordpress-plugin",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/wp-premium/advanced-custom-fields-pro/archive/master.zip",
                    "reference": "master"
                },
                "require": {
                    "composer/installers": "^1.0"
                }
            }
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "public/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "public/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "public/wp"
    },
    "scripts": {
        "install-wp-cli": [
            "curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar"
        ],
        "update-wp-cli": [
            "php wp-cli.phar cli update --yes"
        ],
        "tidy": [
            "php -r \"if (PHP_OS === 'Windows') { exec('rd /s /q public/wp/wp-content'); } else { exec('rm -rf public/wp/wp-content'); }\""
        ],
        "remove-git": [
            "php -r \"if (PHP_OS === 'Windows') { exec('rd /s /q .git'); } else { exec('rm -rf .git'); }\""
        ],
        "env": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "install-lumberjack": [
            "git clone https://github.com/Rareloop/lumberjack.git public/themes/app",
            "php -r \"PHP_OS === 'Windows' ? exec('rd /s /q public/themes/app/.github') : exec('rm -rf public/themes/app/.github');\"",
            "php -r \"unlink('public/themes/app/.editorconfig');\"",
            "php -r \"unlink('public/themes/app/composer.json');\""
        ],
        "new-project": [
            "@composer remove-git",
            "@composer tidy",
            "@composer env"
        ],
        "new-project-with-lumberjack": [
            "@composer new-project",
            "php -r \"if (PHP_OS === 'Windows') { exec('rd /s /q public/themes/app'); } else { exec('rm -rf public/themes/app'); }\"",
            "@composer add-lumberjack"
        ],
        "codesniff": [
            "phpcs"
        ],
        "post-root-package-install": [
            "@composer new-project"
        ]
    }
}
